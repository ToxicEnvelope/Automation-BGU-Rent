package il.co.bgurent.tests;

import org.openqa.selenium.WebDriver;
import org.testng.annotations.AfterClass;
import org.testng.annotations.BeforeClass;

import il.co.bgurent.utils.helper.UIMap;

public class BaseTest {

	
	static WebDriver driver;
	
	static final String DATA = "/src/il/co/bgurent/or/datafile.property";
	static final String LOC = "/src/il/co/bgurent/or/locator.property";
	static final UIMap dataMap = new UIMap(System.setProperty(System.getProperty("user.dir"), DATA));
	static final UIMap locMap = new UIMap(System.setProperty(System.getProperty("user.dir"), LOC));

	@BeforeClass
	public void startUp() throws Exception {
		UIMap.getDriver();
	}
	
	@AfterClass
	public void tearDown() throws Exception {
		if(driver != null) {
			driver.manage().deleteAllCookies();
			driver.quit();
		} 
			
	}
}
